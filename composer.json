{
    "name": "sepbit/dekaph",
    "description": "This is a simple library to convert Dekatrian and Gregorian.",
    "type": "library",
    "keywords": [
        "SEPBIT",
        "converter",
        "date",
        "calendar",
        "dekatrian",
        "gregorian"
    ],
    "homepage": "https://gitlab.com/sepbit/dekaph",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Vitor Guia",
            "email": "contato@vitor.guia.nom.br",
            "homepage": "https://vitor.guia.nom.br",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "contato@sepbit.com",
        "issues": "https://gitlab.com/sepbit/dekaph/issues"
    },
    "require": {
        "php" : "^7.2"
    },
    "require-dev": {
        "jms/serializer": "1.7.*",
        "phpdocumentor/phpdocumentor": "^2.9",
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit" : "^8.4"
    },
    "autoload": {
        "psr-4": {
            "Sepbit\\Dekaph\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sepbit\\Dekaph\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "doc": "phpdoc --visibility=public -d src/ -t docs/phpdoc/",
        "fix-style": "phpcbf -p --standard=PSR2 src/ tests/",
        "check-style": "phpcs -p --standard=PSR2 src/ tests/",
        "test": "phpunit"
    }
}
